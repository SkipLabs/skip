        "outDir": "./dist/",
        "noImplicitAny": false,
        "module": "esnext",
        "target": "es2021",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "isolatedModules": true
    },
    "include": [
        "src/**/*"
