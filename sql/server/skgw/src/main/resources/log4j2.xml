<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug" strict="true" name="ProdConfig"
               packages="org.apache.logging.log4j.test">
  <Appenders>
    <Appender type="Console" name="STDOUT">
      <Layout type="PatternLayout" pattern="%d{yyyy-dd-MM HH:mm:ss:SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Appender>
  </Appenders>

  <Loggers>
    <Root level="INFO">
      <AppenderRef ref="STDOUT"/>
    </Root>
  </Loggers>
</Configuration>
