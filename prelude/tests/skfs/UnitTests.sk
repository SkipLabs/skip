module alias T = SKTest;

module SKStoreTest;

class IBox(value: Int) extends SKStore.File

fun convertIBox(file: SKStore.File): IBox {
  file match {
  | x @ IBox _ -> x
  | _ -> invariant_violation("Was expecting an IBox")
  }
}

fun convertSFile(file: SKStore.File): IBox {
  file match {
  | SKStore.StringFile(v) -> IBox(v.toInt())
  | _ -> invariant_violation("Was expecting an IBox")
  }
}

fun convertDir(file: SKStore.File): SKStore.Dir {
  file match {
  | x @ SKStore.Dir _ -> x
  | _ -> invariant_violation("Was expecting an Dir")
  }
}

fun make(
  context: mutable SKStore.Context,
  name: String,
  values: Array<Int>,
): SKStore.EHandle<SKStore.IID, SKStore.StringFile> {
  kvArray = values.map(x -> (SKStore.IID(x), SKStore.StringFile(x.toString())));
  context.mkdir(
    SKStore.IID::keyType,
    SKStore.StringFile::type,
    SKStore.DirName::create(name),
    kvArray,
  )
}

fun compareResults(
  context: mutable SKStore.Context,
  kind: String,
  path: String,
  values: Array<Int>,
): void {
  readV = context.getValue(SKStore.Path::fromString(path));
  try {
    T.expectEq(
      readV,
      values.map(x -> IBox(x)),
      kind + " test for path " + path,
    );
  } catch {
  | _ ->
    debug(readV);
    debug(values);
    T.fail("Compare result failed\n")
  }
}

fun testUpdate(
  context: mutable SKStore.Context,
  writes: Array<(String, Array<Int>)>,
  expects: Array<(String, Array<Int>)>,
): void {
  for (kv in writes) {
    (key, values) = kv;
    path = SKStore.Path::fromString(key);
    dir = context.unsafeGetEagerDir(path.dirName);
    dir.writeArray(context, path.baseName, values.map(x -> IBox(x)));
  };
  context.update();
  for (kv in expects) {
    (key, values) = kv;
    compareResults(context, "Update", key, values);
  };
}
