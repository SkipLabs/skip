{
  "compilerOptions": {
    "target": "ES2021",
    "outDir": "../dist/src",
    "baseUrl": ".",
    "paths": {
      "skip-runtime": ["../src/skip-runtime.ts"],
      "#std/*": ["../../../prelude/ts/src/*"],
      "#skdb/*": ["../../../sql/ts/src/*"],
      "#skjson/*": ["../../../skjson/ts/src/*"]
    },
    "strictNullChecks": true,
    "module": "node16",
    "verbatimModuleSyntax": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "moduleResolution": "Node16",
    "incremental": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true
  }
}
