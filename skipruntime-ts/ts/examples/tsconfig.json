{
  "compilerOptions": {
    // Type Checking
    "strict": true,
    "strictNullChecks": true,
    // Modules
    "baseUrl": ".",
    "module": "node16",
    "moduleResolution": "Node16",
    "paths": {},
    // Emit
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist/",
    "sourceMap": true,
    // Interop Constraints
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    // Projects
    "incremental": true,
    // Language and Environment
    "target": "ES2021"
  }
}
