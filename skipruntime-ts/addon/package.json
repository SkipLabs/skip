{
  "name": "@skipruntime/addon",
  "version": "1.0.0",
  "private": true,
  "gypfile": true,
  "type": "module",
  "exports": {
    ".": "./dist/src/index.js"
  },
  "scripts": {
    "prepare": "mkdir -p dist && skargo build --lib --manifest-path=../native/Skargo.toml --out-dir=./dist",
    "build": "tsc && skargo clean --manifest-path=../native/Skargo.toml && skargo build --lib --manifest-path=../native/Skargo.toml --out-dir=./dist && npm i",
    "clean": "rm -rf dist build",
    "lint": "eslint",
    "test": "mocha"
  },
  "devDependencies": {
    "@skipruntime/tests": "^0.0.4",
    "@types/mocha": "^10.0.10",
    "mocha": "^10.8.2"
  },
  "dependencies": {
    "@skiplang/json": "^0.0.1",
    "@skipruntime/api": "^0.0.3",
    "@skipruntime/core": "^0.0.1"
  }
}
