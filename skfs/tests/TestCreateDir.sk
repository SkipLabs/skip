/*****************************************************************************/
/* Test that creates a directory. */
/*****************************************************************************/

module SKStoreTest;

@test
fun testCreateDir(): void {
  _ = SKStore.runWithGcReturnContext(SKStore.Context{}, context ~> {
    dirName = SKStore.DirName::create("/tmp/");
    mappedDirName = SKStore.DirName::create("/tmp/mapped/");
    dir = context.mkdir(SKStore.StringFile::fromFile, dirName, Array[]);
    _ = dir.contextWriterKeyValues(
      SKStore.StringFile::fromFile,
      context,
      mappedDirName,
      (_context, writer, key, files) ~> {
        writer.writeArray(
          key,
          files.map(file -> {
            !file.value = file.value + "Mapped";
            file
          }),
        )
      },
    );
    SKStore.CStop(None())
  })
}
